{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": false,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": false, // Consider setting to true for better type safety
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@/components/*": ["src/components/*"],
        "@/lib/*": ["src/lib/*"]
      }
    },
    "include": ["src"]
  }